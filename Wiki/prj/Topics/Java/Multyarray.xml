    <para style="margin-left:35px;"><text styleclass="Normal" style="font-family:Consolas; font-size:11pt; text-decoration:none; vertical-align:baseline; color:#000000;" translate="true">arr3[1] = </text><text styleclass="Normal" style="font-family:Consolas; font-size:11pt; text-decoration:none; vertical-align:baseline; color:#0000ff;" translate="true">new short</text><text styleclass="Normal" style="font-family:Consolas; font-size:11pt; text-decoration:none; vertical-align:baseline; color:#000000;" translate="true">[2]; </text><text styleclass="Normal" style="font-family:Consolas; font-size:11pt; text-decoration:none; vertical-align:baseline; color:#00b050;" translate="true">// &#160;второе измерение</text></para>
